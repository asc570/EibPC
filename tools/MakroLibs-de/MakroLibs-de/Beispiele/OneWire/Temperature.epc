Chart1 = 1
Webzeit=convert(hour(),0.0)+convert(minute(),0.0)/60.0+convert(second(),0.0)/3600.0
if cycle(1,0) then {
 	mpchart(Chart1,Webzeit,Wohnzimmer_Temperature,0,Page1)
} endif


